@model LeaveManagemnetApp.Views.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@{
    var errorMessage = TempData["ErrorMessage"] as string;
    if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label for="inputUsername">Username</label>
        <input type="text" class="form-control" id="inputUsername" name="username">
    </div>
    <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" class="form-control" style="padding-top: 10px;" id="inputPassword" name="password">
    </div>
    <button type="submit" class="btn btn-primary " style="padding-top: 15px; margin-top: 20px">Login</button>
    <button type="submit" class="btn btn-primary" style="padding-top: 15px; margin-top: 20px">Login</button>
    <a href="@Url.Action("CheckApplyStatus", "Account")" class="btn btn-dark" style="margin-top: 20px">Check Apply Status</a>

</form>